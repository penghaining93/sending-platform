              tsr.GENDER,
              tsr.RELATIONSHIP,
              F_formatymd_ws(tsr.BIRTHDAY) as BIRTHDAY,
              tsr.POLITICAL as POLITICAL_CODE,
              tsr.HOMEADDRESS,
              tsr.VOCATION,
              tsr.RDUTY,
              tsr.ORGNAME,
              tsr.ISPRIMARYCONTACT,
              tsr.PHONE
              ,'null' as emptydata

              from
              tbprisoner_social_relation tsr
              where tsr.crimid = #{crimid}
