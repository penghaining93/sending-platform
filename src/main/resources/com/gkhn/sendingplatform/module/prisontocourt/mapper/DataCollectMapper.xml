              substr(SENTENCE, 0, 2) as
              RAWYEAR,
              substr(SENTENCE, 3, 2) as RAWMONTH,
              substr(SENTENCE, 5, 2) as
              RAWDAY,
              tp.EXECUTINGORGAN
