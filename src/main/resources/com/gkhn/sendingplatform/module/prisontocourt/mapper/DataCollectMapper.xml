              from tbprisoner_precrime
              tp,TBPRISONER_BASE_CRIME tbc

              where tp.crimid = #{crimid} and
              tbc.crimid=tp.crimid
          </select>

          <select id="getSHGXCaseDateInfo" resultType="Map">
